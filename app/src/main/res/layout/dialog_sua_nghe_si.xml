<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp">
    <LinearLayout
        android:padding="10dp"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgeditalbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/addimg"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình album"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <EditText
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/edtmanghesi"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã nghệ sĩ" />
        <EditText
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/edttennghesi"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên nghệ sĩ" />
        <EditText
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:id="@+id/edtquenghesi"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quê quán"
           />
        <EditText
            android:id="@+id/edtnamnghesi"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Năm sinh"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="start|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình nghệ sĩ"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/imgedthinhcasi"
                android:layout_gravity="end"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/addimg" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="start|center"
                android:id="@+id/btnthemdone"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sửa"/>
            <Button
                android:layout_gravity="end"
                android:id="@+id/btnthoat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Thoát"/>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>