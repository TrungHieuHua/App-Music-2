<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#40454E"
    tools:context=".Activity.Screen_listening_music">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/donw"/>

        <TextView
            android:id="@+id/tv_tieu_de"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Gone"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/dot"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="130dp"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/img_dia"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="100dp"
            android:src="@mipmap/cd"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:id="@+id/img_album_bai_hat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:src="@drawable/gone"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ten_bai_hat"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:text="Gone"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_ten_ca_si"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RoÃ©s (Blackpink)"
                android:textColor="@color/white"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/tym"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/love1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/tv_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.29"
            android:textColor="@color/white"
            android:layout_marginLeft="300dp"/>
    </LinearLayout>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:thumbTint="@color/white"
        android:progressTint="@color/white"
        android:progress="0"/>

    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_tron_bai"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_shuffle" />
        <ImageView
            android:id="@+id/img_prev"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginLeft="70dp"/>
        <ImageView
            android:id="@+id/img_play_pause"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:src="@drawable/pause"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_next"
            android:layout_width="25dp"
            android:layout_height="60dp"
            android:src="@drawable/next"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_phat_1_bai"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_repeat"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>
