<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#40454E"
    tools:context=".Activity.Screen_mail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_tro_ve_dn"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/tro_ve" />


        <TextView
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Đăng nhập không cần mật khẩu"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Email Hoặc tên người dùng"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/khung_nhap"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nhap_mai_dk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung_nhap"
            android:hint="Nhập email hoặc tên người dùng của bạn"
            android:textColor="@color/white"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Chúng tôi sẽ gửi cho bạn một email chứa đường liên kết giúp bạn đăng nhập"
        android:textColor="#B3FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_tiep1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_xac_nhan"
        app:backgroundTint="@null"
        android:textStyle="bold"
        android:text="Tiếp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"/>


</LinearLayout>